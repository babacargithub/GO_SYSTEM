 <!-- Left side column. contains the logo and sidebar -->
  <aside id="sidebar" class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
          <p>Golob One</p>
          <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
      </div>
     
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">Menu Vertical</li>
        <!-- Cette déclaration a été ajoutée pour assurer la compatibilité avec la version 1 de GO SYS !-->
        {% set menus=menu_vertical %}
        {% for menu in menus %}
        {% if menu.dropdown is defined %}
        <li class="treeview">
          <a href="#">
            <i class="fa fa-list"></i> <span>{{menu.libelle}}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
              {% for subItem in menu.dropdown %}
             <li><a href="{{subItem.href}}"><i class="fa fa-chevron-right"></i>{{subItem.libelle}}</a></li>
              
              {%endfor %}
          </ul>
        </li>
        {%else %}
            <li><a href="{{menu.href}}"><i class="fa fa-book"></i> <span>{{menu.libelle}}</span></a></li>
            {%endif %}
        {%endfor %}
        
        </ul>
    </section>
    <!-- /.sidebar -->
  </aside>

 