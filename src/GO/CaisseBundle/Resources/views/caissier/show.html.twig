{% extends '@GOCaisse/caissier/caissier_main_layout.html.twig' %}

{% block content_body %}
    <h1>Caissier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ caissier.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ caissier.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ caissier.nom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ caissier.tel }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ caissier.adresse }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ caissier.shortName }}</td>
            </tr>
            <tr>
                <th>Disabled</th>
                <td>{% if caissier.disabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if caissier.createdAt %}{{ caissier.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deleated</th>
                <td>{% if caissier.deleated %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Deleatedat</th>
                <td>{% if caissier.deleatedAt %}{{ caissier.deleatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('caissier_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('caissier_edit', { 'id': caissier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
