{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Formule</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ entity.tarif }}</td>
            </tr>
            <tr>
                <th>Abrv</th>
                <td>{{ entity.abrv }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('formule') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('formule_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('formule_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
