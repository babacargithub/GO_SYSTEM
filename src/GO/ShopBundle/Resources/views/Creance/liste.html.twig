
Liste des creances trouvées
        {% if creances is defined %}
            <table class="table table-bordered table-striped">
                <tr >
                        
                    <th>Client</th>
                    <th>Téléphone</th>
                    <th>Produit</th>
                    <th>Quantite</th>
                    <th>Prix Unitaire</th>
                    <th>Date Créance</th>
                    <th>Date Echéance</th>
                    <th>Opérations</th>
                </tr>
                {% for creance in creances %}
                    <tr id="row-{{ creance.id }}">
                        <td>{{creance.client.prenom~" "~creance.client.nom}}</td>
                        <td>{{creance.client.tel}}</td>
                        <td>{{ creance.produit.nom}}</td>
                        <td>{{ creance.quantite}}</td>
                        <td>{{ creance.prixUnit|nombre()  }}</td>
                        <td>{{ creance.dateCreance.format('d/m/Y H:i:s')}}</td>
                        <td>{{ creance.dateEcheance.format('d/m/Y H:i:s')}}</td>
                       <td><a id="{{creance.id}}" class="remb_prod" href="{{path("creance_rembourser", {"id":creance.id})}}">Rembourser</a>
                       <td><a class="update_action" href="{{path("creance_rembourser", {"id":creance.id})}}">Modifier</a>
                          <a class="annuler_action" id="{{ creance.id }}" href="{{ path('go_shop_creance_supprimer', {'id': creance.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                    {% endfor %}
            </table>
            {% else %}
                
    {% endif %}
  