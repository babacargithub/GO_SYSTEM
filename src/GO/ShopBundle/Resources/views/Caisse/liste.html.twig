    {% extends "@GOShop/Vente/vente_main_layout.html.twig"%}
{% block content_body %}          Sorties journée
        Total des sorties {% if total_sortie is defined%}{{total_sortie|nombre()}}
        {%endif%}
            <h2>Résumé sortie</h2>
            <table class="table table-bordered">
                <tr>
                    <th>Poste dépense</th><th>Montant</th>
                </tr>
                {% for total_post in total_postes%}
                <tr>
                    <td>{{total_post.libelle}}</td>
                    <td>{{total_post.montant|nombre()}}</td>
                </tr>
                {%endfor%}
            </table>
                    
                    
            </table>
        {% if sorties is defined %}
            <table class="table table-bordered table-striped">
                <tr >
                        
                    <th>Montant</th>
                    <th>Libellé</th>
                    <th>Justifications</th>
                    <th>Date</th>
                    <th>Effectué par</th>
                    <th>Opérations</th>
                </tr>
                {% for sortie in sorties %}
                    <tr id="row-{{ sortie.id }}">
                        <td>{{sortie.montant|nombre() }}</td>
                        <td>{{ sortie.charge.libelle}}</td>
                        <td>{{ sortie.justif }}</td>
                        <td>{{ sortie.date.format('d/m/Y H:i')}}</td>
                        <td>{{ sortie.user.prenom}}</td>
                        
                         <td>
                            <a class="update_action" id="{{ sortie.id }}" href='update_sortie-{{ sortie.id }}.golob'>Modifier</a>
                            <a class="annuler_action" id="{{ sortie.id }}" href="{{ path('go_shop_caisse_sortie_delete', {'id': sortie.id}) }}">Annuler</a>
                        </td>
                    </tr>
                    {% endfor %}
            </table>
            {% else %}
                <span>Liste undefined</span>
    {% endif %}
    {% endblock %}