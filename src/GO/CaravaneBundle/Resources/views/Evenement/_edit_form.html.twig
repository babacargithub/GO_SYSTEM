
 
        {% if form is defined %}
<form id="{{form.vars.name}}" action="update_reservation.golob" class="form-horizontal" method="post" {{form_enctype(form)}}>
<div>
    {{ form_errors(form)}}
    {{ form_widget(form.id,{"attr":{"hidden":"hidden"}})}}
    {{ form_widget(form.agent,{"attr":{"hidden":"hidden"}})}}
    <div>
    {{ form_label(form.depart, "Départ")}}
    {{ form_widget(form.depart,{"attr":{"class":"form-control"}})}}
    
    </div>
   
    <div id="{{form.client.prenom.vars.id}}_div">
    {{ form_label(form.client.prenom, "Prénom client")}}
    {{ form_widget(form.client.prenom,{"attr":{"class":"form-control"}} )}}
    </div>
    <div id="{{form.client.nom.vars.id}}_div">
    {{ form_label(form.client.nom, "Nom client")}}
    {{ form_widget(form.client.nom,{"attr":{"class":"form-control"}} )}}
    </div>

    
    <div>
    
    {{ form_widget(form.client.adresse,{"attr":{"hidden":"hidden"}} )}}
    </div>
    <div>
    
    {{ form_widget(form.client.promo,{"attr":{"hidden":"hidden"}} )}}
    </div>
    <div>
    {{ form_label(form.client.tel, "Téléphone client")}}
    {{ form_widget(form.client.tel,{"attr":{"class":"form-control"}} )}}
    </div>
   
    <div>
    {{ form_label(form.pointDep, "Point de départ")}}
    <select class='form-control' name='{{form.vars.name}}[{{form.pointDep.vars.name}}]' id='{{form.vars.name}}_{{form.pointDep.vars.name}}'>
        <option value="">Selectionnez point depart</option>
        {% for key, val in form.pointDep.vars.choices %}
       <option trajet="{{val.data.trajet}}" value="{{val.value}}" {{(val.value==form.pointDep.vars.value ? 'selected': '')}}>{{val.label}}</option>
   
       
       {% endfor %}</select>
    </div>
    <div>
    {{ form_label(form.des, "Destination")}}
    <select class='form-control' name='{{form.vars.name}}[{{form.des.vars.name}}]' id='{{form.vars.name}}_{{form.des.vars.name}}'>
        <option value="">Selectionnez Destination</option>
        {% for key, val in form.des.vars.choices %}
       <option trajet="{{val.data.trajet}}" value="{{val.value}}" {{(val.value==form.des.vars.value ? 'selected': '')}}>{{val.label}}</option>
   {% endfor %}</select> </div>
        {{ form_row(form._token) }}
     
<input type="submit" class="btn btn-primary" value="Enregistrer les modifications"/>
</form>
</div>

    {% endif %}

  